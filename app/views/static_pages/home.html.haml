.row.carousel-row
  #myCarousel.carousel.slide{"data-ride" => "carousel"}
    / Indicators
    %ol.carousel-indicators
      - if @carousel_images[:images_uploaded]
        - @carousel_images[:images].each_with_index do |photo, n|
          %li.if.n{:class => "\#{'active' == 0}", "data-slide-to" => "\#{n}", "data-target" => "#MyCarousel"}
    .carousel-inner{:role => "listbox"}
      - if @carousel_images[:images_uploaded]
        .item.active.carousel-image
          = image_tag @carousel_images[:images].first.image, alt: 'default.jpg'
        - @carousel_images[:images].drop(1).each do |image|
          .item.carousel-image
            = image_tag image.image
      - if !@carousel_images[:images_uploaded]
        .item.active.carousel-image
          = image_tag @carousel_images[:images]
    / Left and right controls
    - if @carousel_images[:images_uploaded]
      %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
        %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
        %span.sr-only Previous
      %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
        %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
        %span.sr-only Next